<h1 class="text-center"></h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col-md-5">
        {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}" method="POST">
                <button type="submit" class="btn btn-secondary burger-button"><span class="cui-tags" aria-hidden="true"></span> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col-md-5">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class='devoured'>
                <ul class="list-group"></ul>
                    <li class="list-group-item">
                        {{this.burger_name}}
                    </li>
              </ul>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>

    <h3 class="add-burger-title">Add a Burger</h3>

        <div class="col-md-5">
        <form action="/burgers" method="POST">
        <input type="text" class="form-control" name="burger_name" placeholder="burger name here...">
        <button type="submit" class="btn btn-info add-burger">Add The Burger</button>
        </form>
        </div>
  </div>
</main>

